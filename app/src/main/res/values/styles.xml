<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" />

    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/divider</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="actionMenuTextColor">@color/icons</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/divider</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="md_dark_theme">false</item>
    </style>

    <style name="AppTheme.Base.Shadow" parent="@style/AppTheme.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="sl_shadowRadius">4dp</item>
        <item name="sl_shadowColor">#AA000000</item>
        <item name="sl_dx">0dp</item>
        <item name="sl_dy">0dp</item>
    </style>

    <style name="AppTheme.Base.EditText" parent="@style/AppTheme.Base">
        <item name="baseColor">@color/primary_text</item>
        <item name="primaryColor">@color/accent</item>
        <item name="errorColor">@color/primary_dark</item>
        <item name="floatingLabel">normal</item>
    </style>

    <style name="AppTheme.Base.Lists.ImageRipple" parent="@style/AppTheme.Base">
        <item name="android:padding">12.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppTheme.Base.Lists.Ripple" parent="@style/AppTheme.Base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="rv_framerate">20</item>
        <item name="rv_rippleDuration">300</item>
        <item name="rv_centered">true</item>
    </style>

    <style name="AppTheme.Base.Match.ItemText" parent="@style/AppTheme.Base">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppTheme.Base.Match.SubTitle" parent="@style/AppTheme.Base">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Base.Match.Title" parent="@style/AppTheme.Base">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Base.Slider">
        <item name="dsb_trackColor">@color/secondary_text</item>
        <item name="dsb_progressColor">@color/accent</item>
        <item name="dsb_indicatorColor">@color/accent</item>
    </style>

</resources>
